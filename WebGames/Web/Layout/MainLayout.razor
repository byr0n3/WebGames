@using Elegance.Icons
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Options
@using WebGames.Models
@using WebGames.Web.Components
@inherits LayoutComponentBase

<div class="container">
	<div class="sidebar">
		<div class="sidebar-header d-flex flex-row flex-nowrap align-center gap-medium">
			<span class="app-logo">
				@(Icons.Joker)
			</span>
			<span class="app-title">@(AppOptions.Value.Name)</span>
		</div>

		<Navigation />

		<AuthorizeView>
			<Authorized Context="auth">
				<AccountDisplay User="@(auth.User)" />
			</Authorized>
		</AuthorizeView>
	</div>

	<main class="content">
		@(Body)
	</main>
</div>

<div id="blazor-error-ui" data-nosnippet>
	An unhandled error has occurred.
	<a href="." class="reload">Reload</a>
	<span class="dismiss">🗙</span>
</div>

@code {

	[Inject] public required IOptions<AppOptions> AppOptions { get; init; }

}
