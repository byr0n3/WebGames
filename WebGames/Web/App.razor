@using Microsoft.Extensions.Options
@using WebGames.Models
@using WebGames.Web.Components

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<base href="/" />
		<ResourcePreloader />
		<link rel="stylesheet" href="@(Assets["css/app.css"])" />
		<link rel="stylesheet" href="@(Assets["css/animations.css"])" />
		<link rel="stylesheet" href="@(Assets["css/utilities.css"])" />
		<link rel="stylesheet" href="@(Assets["WebGames.styles.css"])" />
		<ImportMap />
		<HeadOutlet />
		<title>@(Options.Value.Name)</title>
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="@(Options.Value.Name)" />
		<link rel="manifest" href="/site.webmanifest" />
	</head>

	<body>
		<Routes />
		<ReconnectModal />
		<script src="@Assets["_framework/blazor.web.js"]"></script>
		<script src="@(Assets["js/confetti.min.js"])"></script>
		<script src="@(Assets["js/collapsable.js"])"></script>
		<script>
			function setDocumentTitle(title) {
				document.title = title;
			}
		</script>
	</body>
</html>

@code {

	[Inject] public required IOptions<AppOptions> Options { get; init; }

}
