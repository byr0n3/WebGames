@using Elegance.Icons
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing

<nav>
	<ul class="nav-items">
		<li>
			<NavLink href="/" Match="@(NavLinkMatch.All)">
				@(Icons.Home) @(Localizer["Home"])
			</NavLink>
		</li>

		<AuthorizeView>
			<Authorized Context="_">
				<li>
					<NavLink href="/games">
						@(Icons.DeviceGamepad) @(Localizer["Play"])
					</NavLink>
				</li>
			</Authorized>

			<NotAuthorized>
				<li>
					<NavLink href="/sign-in">
						@(Icons.SignIn) @(Localizer["SignIn"])
					</NavLink>
				</li>
				<li>
					<NavLink href="/sign-up">
						@(Icons.UserPlus) @(Localizer["SignUp"])
					</NavLink>
				</li>
			</NotAuthorized>
		</AuthorizeView>
	</ul>
</nav>
