@page "/sign-in"
@using Microsoft.AspNetCore.Components.Forms

@if (SignedUp)
{
	<div>Your account has been created. Make sure to activate it using the e-mail in your inbox before signing in.</div>
}

<EditForm EditContext="@(context)" OnValidSubmit="@(SignInAsync)" FormName="@(SignIn.formName)">
	<DataAnnotationsValidator />

	<div>
		<label for="user">Username/e-mail</label>
		<InputText @bind-Value="@(Model.User)"
		           id="user"
		           autocomplete="username"
		           required />
		<ValidationMessage For="@(() => Model.User)" />
	</div>

	<div>
		<label for="password">Password</label>
		<InputText @bind-Value="@(Model.Password)"
		           type="password"
		           id="password"
		           autocomplete="current-password"
		           required />
		<ValidationMessage For="@(() => Model.Password)" />
	</div>

	<div>
		<InputCheckbox @bind-Value="@(Model.Persistent)" id="persistent" />
		<label for="persistent">Stay signed in?</label>
	</div>

	<a href="/forgot-password">Forgot your password?</a>
	<a href="/sign-up">No account yet?</a>

	<button type="submit">Sign in</button>
</EditForm>
